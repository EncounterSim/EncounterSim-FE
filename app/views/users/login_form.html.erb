<div class="jumbotron text-center">
<h1>Login</h1>
</div>

<div class="text-center">
  <!-- Login Form -->
  <%= form_with url: login_path, method: :post do |form| %>
    <%= form.label :email, "Email" %><br>
    <%= form.text_field :email %><br><br>
    <%= form.label :password, "Password" %><br>
    <%= form.password_field :password %><br><br>
    <%= form.submit "Login" %>
  <% end %>

  <%= link_to "Login with GitHub",
  "https://github.com/login/oauth/authorize?client_id=9efeee337b5dd5eeb0dd&scope=repo" %>

  <!-- Link to Create Account -->
  <br><p>Don't have an account? <%= link_to "Create Account", new_user_path %></p>
</div>